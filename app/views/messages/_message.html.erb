<div id="<%= dom_id message %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Subject:</strong>
    <%= message.subject %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">From:</strong>
    <%= message.from %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">To:</strong>
    <%= message.to %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Cc:</strong>
    <%= message.cc %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Bcc:</strong>
    <%= message.bcc %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Content:</strong>
    <%= message.content %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this message", message, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= button_to "Send again", send_email_message_path(message), method: :post, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
